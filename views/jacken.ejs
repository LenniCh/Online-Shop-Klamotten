                text-align: left;
                padding-left: 10px;
                padding-right: 70px;
                padding-bottom: 30px;
                padding-top: 1px;
            }

            .dropbtn {
                background-color: rgb(77, 187, 43);
                color: white;
                padding: 16px;
                font-size: 28px;
                border: none;
                width: 85px;
            }

            .dropup {
                position: relative;
                display: inline-block;
            }

            .dropup-content {
                display: none;
                position: absolute;
                background-color: rgba(77, 187, 43, 0.603);
                min-width: 300px;
                bottom: 70px;
                z-index: 1;
            }

            .dropup-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

            .dropup-content a:hover {background-color: #ccc}

            .dropup:hover .dropup-content {
                display: block;
            }

            .dropup:hover .dropbtn {
                background-color: rgb(77, 187, 43);
            }
        </style>
    </head>
