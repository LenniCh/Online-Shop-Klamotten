<!DOCTYPE html>
<html>
    <head>
        <title></title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
        <style>
            .container4Kat {
                position: relative;
                width: 100%;
            }

            .image {
                opacity: 1;
                display: block;
                width: 100%;
                height: auto;
                transition: .5s ease;
                backface-visibility: hidden;
                padding: 2px;
            }

            .middle {
                transition: .5s ease;
                opacity: 1;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                -ms-transform: translate(-50%, -50%);
                text-align: center;
            }

            .container4Kat:hover .image {
                opacity: 0.3;
            }

            .container4Kat:hover .middle {
                opacity: 1;
            }

            .categorytext {
                color: white;
                font-size: 40px;
                padding: 16px 16px;
            }

            .formular {
                color:black;
            }

            .addProd {
                position: fixed;
                left: 0;
                bottom: 0;
                width: 85px;
                color: white;
                text-align: center;
                opacity: 0.7;
            }

            .addProd:hover {
                opacity: 1;
            }

            .addProdButton {
                padding-top: 10px;
                padding-bottom: 10px;
                font-size: 45px;
            }

            .addingProduct {
                background: rgba(77, 187, 43, 0.603);
                text-align: left;
                padding-left: 10px;
                padding-right: 70px;
                padding-bottom: 30px;
                padding-top: 1px;
            }

            .dropbtn {
                background-color: rgb(77, 187, 43);
                color: white;
                padding: 16px;
                font-size: 28px;
                border: none;
                width: 85px;
            }

            .dropup {
                position: relative;
                display: inline-block;
            }

            .dropup-content {
                display: none;
                position: absolute;
                background-color: rgba(77, 187, 43, 0.603);
                min-width: 300px;
                bottom: 70px;
                z-index: 1;
            }

            .dropup-content a {
                color: black;
                padding: 12px 16px;
                text-decoration: none;
                display: block;
            }

            .dropup-content a:hover {background-color: #ccc}

            .dropup:hover .dropup-content {
                display: block;
            }

            .dropup:hover .dropbtn {
                background-color: rgb(77, 187, 43);
            }
        </style>
    </head>
    <body>

        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#">Projekt</a>
                </div>
                <ul class="nav navbar-nav">
                <li class="active"><a href="#">Home</a></li>
                <li><a href="#">Page 1</a></li>
                <li><a href="#">Page 2</a></li>
                <li><a href="#">Page 3</a></li>
                </ul>
            </div>
        </nav>

        <div class="jumbotron text-center">
            <br><br><h1>Anbieter-/ Markenbanner</h1><br><br>
        </div>

        <div class="container">
            <div class="page-header text-center">
                <h1>Kategorien</h1>      
            </div>
        </div>

        <div class="row">
            <div class="col-sm-4">
                <a href="/shirts" class="img-responsive" alt="T-Shirts" method="GET">
                    <div class="container4Kat">
                        <img src="tshirt_stack.jpg" alt="T-Shirts" class="image">
                        <div class="middle">
                            <div class="categorytext">T-Shirts</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-sm-4">
                <a href="/pullis" class="img-responsive">
                    <div class="container4Kat">
                        <img src="pullover_stack.jpg" alt="Pullis" class="image">
                        <div class="middle">
                            <div class="categorytext">Pullover</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-sm-4">
                <a href="/jacken" class="img-responsive">
                    <div class="container4Kat">
                        <img src="jacken.jpg" alt="Jacken" class="image">
                        <div class="middle">
                            <div class="categorytext">Jacken</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <a href="/hosen" class="img-responsive">
                    <div class="container4Kat">
                        <img src="hosen.jpg" alt="Hosen" class="image">
                        <div class="middle">
                            <div class="categorytext">Hosen</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-sm-4">
                <a href="/schuhe" class="img-responsive">
                    <div class="container4Kat">
                        <img src="schuhe.jpg" alt="T-Shirts" class="image">
                        <div class="middle">
                            <div class="categorytext">Schuhe</div>
                        </div>
                    </div>
                </a>
            </div>
            <div class="col-sm-4">
                <a href="/accessoires" class="img-responsive">
                    <div class="container4Kat">
                        <img src="accessoires.jpg" alt="T-Shirts" class="image">
                        <div class="middle">
                            <div class="categorytext">Accessoires</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <div class="container">
                <div class="page-header text-center">
                </div>
        </div>
        
        <% include addproduct %>
    </body>
</html>